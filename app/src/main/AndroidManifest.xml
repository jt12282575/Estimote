<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dada.estimote">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".GlobalVariable"
        android:allowBackup="true"
        android:icon="@mipmap/startlogo2"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".Forfirebase">

        </activity>
        <activity android:name=".Login"></activity>
        <activity android:name=".Question" />
        <activity android:name=".Elderclock" />
        <activity android:name=".ClockActivity" />

        <receiver android:name=".AlarmReceiver">
            <intent-filter>
                <action android:name="playsong" />
            </intent-filter>
        </receiver>

        <activity android:name=".MainFrag"></activity>
        <activity android:name=".Lobby"></activity>
        <activity android:name=".ConnectDevice" />
        <activity android:name=".PersonInfo" />
        <activity android:name=".Start"></activity>
        <activity android:name=".Anslist">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>